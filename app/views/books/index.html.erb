<% flash.each do |key,value| %>
  <%= content_tag(:p,value,class: key)%>
<% end %>
<h1 class="list_title">Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show ',book_path(book.id) %></td>
    <td><%= link_to 'Edit ',edit_book_path(book.id) %></td>
    <td><%= link_to 'Destroy' ,destroy_book_path(book.id),method: :delete %> </td>
  </tr>
  <% end %>
</table>

<h2 class="register_title">New book</h2>
<% if @book.errors.any? %>
  <div class="errors_box">
    <p class="errors_count"><%= @book.errors.count %> errors prohibited this book from being saved</p>
    <% @book.errors.full_messages.each do |message| %>
      <p>ãƒ»<%= message %></p>
    <% end %>
  </div>
<% end %>
    
<%= form_with model:@book, url: create_book_path, local: true do |f| %>
  <div class="field">
    <%= f.label :title,'Title' %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body,'Body' %>
    <%= f.text_area :body %>
  </div>
  <div>
  <%= f.submit 'Create Book', class:'create_btn' %>
  </div>
<% end %>